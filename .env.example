# dotenv configuration file example
# Copy this file to .env and replace the values with your actual configuration
# Note: This file contains sensitive information, DO NOT commit your actual .env file to version control

# Used to set `site` in Astro config (which sitemap relies on as well)
VITE_BASE_URL=https://example.com

# Activates debug features in dev mode, only is the value is literally "true"
VITE_DEBUG="true"

# Used for homepage secret link UI
# Must be prefixed with VITE_ to be accessible in browser code
VITE_PUBLIC_API_BASE_URL=https://dev.onetime.dev

# Sentry configuration
# Server-side Sentry (used during build for source maps)
SENTRY_ORG=exampleorg
SENTRY_AUTH_TOKEN=
SENTRY_PROJECT=

# Client-side Sentry (needs VITE_ prefix for client access)
VITE_SENTRY_DSN=https://your-actual-dsn@sentry.io/project
VITE_SENTRY_ENVIRONMENT=production
