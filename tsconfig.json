// https://docs.astro.build/en/guides/imports/#aliases
{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "config/**/*", "src/**/*", "tests/**/*"],
  "exclude": ["dist", "tmp"],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "verbatimModuleSyntax": false,
    "paths": {
      "@/*": ["./src/*"],
      "@root/*": ["./*"],
      "@config/*": ["./config/*"],
      "@tests/*": ["./tests/*"]
    }
  }
}
