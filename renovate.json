{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:astroMonorepo"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 4am on monday"]
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["^astro", "^@astrojs/"],
      "groupName": "Astro packages",
      "schedule": ["every weekend"]
    },
    {
      "matchPackagePatterns": ["^vue", "^@vue/"],
      "groupName": "Vue packages",
      "schedule": ["every weekend"]
    },
    {
      "matchPackageNames": ["typescript"],
      "groupName": "TypeScript compiler"
    },
    {
      "matchPackagePatterns": ["^@types/"],
      "groupName": "TypeScript definitions",
      "schedule": ["every weekend"]
    },
    {
      "matchPackagePatterns": ["^tailwindcss", "^@tailwindcss/"],
      "groupName": "Tailwind CSS packages"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "excludePackagePatterns": ["^astro", "^@astrojs/", "^vue", "^@vue/", "^typescript", "^@types/", "^tailwindcss", "^@tailwindcss/"],
      "groupName": "Other dev dependencies",
      "schedule": ["every weekend"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "prPriority": 10
  },
  "prHourlyLimit": 1,
  "prConcurrentLimit": 3
}
