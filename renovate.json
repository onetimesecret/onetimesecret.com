{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:astroMonorepo"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 4am on monday"]
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["^astro", "^@astrojs/"],
      "groupName": "Astro packages",
      "schedule": ["every weekend"]
    },
    {
      "matchPackagePatterns": ["^vue", "^@vue/"],
      "groupName": "Vue packages",
      "schedule": ["every weekend"]
    },
    {
      "matchPackagePatterns": ["^typescript", "^@types/"],
      "groupName": "TypeScript packages"
    },
    {
      "matchPackagePatterns": ["^tailwindcss", "^@tailwindcss/"],
      "groupName": "Tailwind CSS packages"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "groupName": "Dev dependencies",
      "schedule": ["every weekend"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5
}
