---
import Layout from "@/layouts/Layout.astro";
import { DEFAULT_LANGUAGE } from "@config/astro/i18n";
import enMessages from "@/i18n/ui/en.json";
import type { MessageSchema } from "@/i18n";

// Setup basic i18n
const initialMessages = {
  [DEFAULT_LANGUAGE]: enMessages as MessageSchema,
};

const lang = "en";
---

<Layout
  title="Test Page"
  description="Testing MainLayout implementation"
  htmlLang={lang}
  initialMessages={initialMessages}
  heroTitle="Test Layout Page"
  heroDescription="This page tests the MainLayout implementation">
  <div class="p-8 text-center">
    <h2 class="mb-4 text-2xl font-bold">Content Area</h2>
    <p>
      If you can see this content with the navigation above, the MainLayout is
      working!
    </p>
  </div>
</Layout>
