---
/**
 * 500 Error Page
 *
 * Custom error page displayed when a server error occurs.
 * Implements proper HTML structure with accessibility features.
 *
 * @see https://docs.astro.build/en/basics/astro-pages/#error
 */
import Layout from "@/layouts/Layout.astro";

interface Props {
  error: unknown;
}

const { error } = Astro.props;
const errorMessage = error instanceof Error ? error.message : "Unknown error";
---

<Layout
  title="500 - Server Error | Onetime Secret"
  description="An unexpected error occurred. Please try again later or contact support if the issue persists."
  htmlLang="en">
  <main class="min-h-screen flex items-center justify-center px-4 py-16">
    <div class="max-w-md w-full text-center">
      <!-- Error Code -->
      <h1 class="text-6xl sm:text-7xl font-bold text-gray-900 dark:text-white mb-4">
        500
      </h1>

      <!-- Error Title -->
      <h2 class="text-2xl sm:text-3xl font-semibold text-gray-700 dark:text-gray-200 mb-6">
        Server Error
      </h2>

      <!-- Error Message -->
      <p class="text-base sm:text-lg text-gray-700 dark:text-gray-300 mb-8 leading-relaxed">
        {errorMessage}
      </p>

      <!-- Additional Help Text -->
      <p class="text-sm text-gray-600 dark:text-gray-400 mb-8">
        We're sorry for the inconvenience. Please try again in a few moments.
      </p>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/"
          class="inline-flex items-center justify-center px-6 py-3 bg-brand-600 hover:bg-brand-700 dark:bg-brand-500 dark:hover:bg-brand-600 text-white font-semibold rounded-lg transition-colors duration-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-600"
          aria-label="Return to homepage">
          Return Home
        </a>
        <button
          onclick="window.location.reload()"
          class="inline-flex items-center justify-center px-6 py-3 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-900 dark:text-white font-semibold rounded-lg transition-colors duration-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-500"
          aria-label="Reload the page">
          Try Again
        </button>
      </div>
    </div>
  </main>
</Layout>
