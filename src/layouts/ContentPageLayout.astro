---
/**
 * ContentPageLayout.astro
 * A standardized layout for content pages like About, Privacy, etc.
 * Uses MainLayout as a base but adds consistent styling for content-heavy pages
 */
import MainLayout from "@/layouts/MainLayout.astro";
import type { MessageSchema } from "@/i18n";

export interface Props {
  title: string;
  description?: string;
  htmlLang?: string;
  initialMessages?: Record<string, MessageSchema>;
  heroTitle?: string;
  heroDescription?: string;
}

const {
  title,
  description,
  htmlLang,
  initialMessages,
  heroTitle,
  heroDescription,
} = Astro.props;
---

<MainLayout
  title={title}
  description={description}
  htmlLang={htmlLang}
  initialMessages={initialMessages}
  showHero={true}
  heroTitle={heroTitle}
  heroDescription={heroDescription}>
  <div class="mx-auto max-w-4xl px-4 py-8 md:px-6 lg:px-8">
    <article class="prose dark:prose-invert prose-headings:font-bold prose-a:text-brand-600 prose-a:no-underline hover:prose-a:underline prose-headings:scroll-mt-28 prose-h2:text-3xl prose-h2:font-bold prose-h2:mb-8 prose-h2:text-slate-900 prose-h2:dark:text-white prose-h3:text-2xl prose-h3:font-bold prose-h3:mt-12 prose-h3:mb-6 prose-h3:text-slate-800 prose-h3:dark:text-slate-200 prose-h4:text-xl prose-h4:font-semibold prose-h4:text-slate-800 prose-h4:dark:text-slate-200 prose-h4:mb-4 prose-h4:mt-8 prose-p:text-slate-700 prose-p:dark:text-slate-300 prose-p:text-lg prose-p:leading-relaxed prose-a:text-blue-600 prose-a:dark:text-blue-400 prose-a:font-medium prose-a:transition prose-a:duration-200 prose-a:hover:text-blue-700 prose-a:dark:hover:text-blue-300 prose-ul:my-6 prose-ul:list-disc prose-ul:pl-5 prose-li:text-slate-700 prose-li:dark:text-slate-300 prose-li:my-2 prose-blockquote:bg-blue-50 prose-blockquote:dark:bg-blue-900/30 prose-blockquote:border-l-4 prose-blockquote:border-blue-500 prose-blockquote:dark:border-blue-700 prose-blockquote:py-2 prose-blockquote:px-4 prose-blockquote:my-8 prose-blockquote:rounded-r-lg prose-blockquote:text-slate-700 prose-blockquote:dark:text-slate-300">
      <slot />
    </article>
  </div>
</MainLayout>
